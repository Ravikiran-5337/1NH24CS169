<body>
    <div class="box">
        <h1>üìç Find My Location</h1>
        <button onclick="getLocation()">Click to Find Location</button>
        <div id="result"></div>
    </div>

    <script>
        function getLocation() {
            const result = document.getElementById('result');
            
            if (navigator.geolocation) {
                result.innerHTML = 'Loading...';
                
                navigator.geolocation.getCurrentPosition(
                    (position) => {
                        const lat = position.coords.latitude;
                        const lon = position.coords.longitude;
                        
                        result.innerHTML = `
                            <p><b>Latitude:</b> ${lat.toFixed(4)}</p>
                            <p><b>Longitude:</b> ${lon.toFixed(4)}</p>
                            <p><a href="https://www.google.com/maps?q=${lat},${lon}" target="_blank" style="color: #4CAF50;">üìç View on Map</a></p>
                        `;
                    },
                    (error) => {
                        result.innerHTML = '<div class="error">Please allow location access!</div>';
                    }
                );
            } else {
                result.innerHTML = '<div class="error">Location not supported!</div>';
            }
        }
    </script>
</body>
</html>
